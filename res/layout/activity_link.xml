<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.resiliencesoft.mobilelocator.MainActivity"
    tools:ignore="TextFields" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#7fffd4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Locator"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        tools:ignore="UselessLeaf" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/header111" />
    </LinearLayout>
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:orientation="vertical"
        tools:ignore="UselessLeaf" >
 </LinearLayout>
 
    
    
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="65">
        
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="5dp"
           android:background="@drawable/page222"
           android:orientation="vertical" >
       
           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="104dp"
               android:gravity="center_vertical"
               android:orientation="horizontal" >

               <View
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="2.70"
                   tools:ignore="NestedWeights" />
                              
               <Button
                   android:id="@+id/button3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.96"
                   android:background="@drawable/help111"
                   tools:ignore="HardcodedText" />
               
               <View
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="2.91" />

           </LinearLayout>                                                                                             
           
           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="112dp"
               android:gravity="center_vertical"
               android:orientation="horizontal" >
            
            <View 
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2.5"/>
            
             <Button
                   android:id="@+id/buttonSearch"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1.38"
                   android:background="@drawable/search111"
                   tools:ignore="HardcodedText" />
                             
                <View 
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="5"/>
                
               <Button
                   android:id="@+id/button2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1.81"
                   android:background="@drawable/feedback111"
                   tools:ignore="HardcodedText" />
                   
                 <View 
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2.5"/>           
            </LinearLayout>
               
           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="183dp"
               android:orientation="vertical"
               tools:ignore="UselessLeaf" >
           </LinearLayout>
       </LinearLayout>

 </ScrollView>



</LinearLayout>