<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.resiliencesoft.mobilelocator.HelpActivity"
    tools:ignore="TextFields" >

   

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="vertical" >

           <ImageView
            android:id="@+id/imageViewhelp"
           android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bacharrow" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/page222"
        android:gravity="center|top"
        tools:ignore="UselessLeaf,DisableBaselineAlignment" >

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.88"
            tools:ignore="UselessParent" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:textStyle="bold"
               android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mobile Locator:-
In this app you have to put 10 digit mobile number and you will get number location."    
tools:ignore="HardcodedText" />
               
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/company"
        tools:ignore="InefficientWeight" >

    </LinearLayout>

</LinearLayout>