<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.resiliencesoft.mobilelocator"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.resiliencesoft.mobilelocator.MobileLocator"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.resiliencesoft.mobilelocator.DesignActivity"
            android:label="@string/title_activity_design" >
          <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.resiliencesoft.mobilelocator.LinkActivity"
            android:label="@string/title_activity_link" >
              
        </activity>
        <activity
            android:name="com.resiliencesoft.mobilelocator.FeedbackActivity"
            android:label="@string/title_activity_feedback" >
        </activity>
        <activity
            android:name="com.resiliencesoft.mobilelocator.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>
